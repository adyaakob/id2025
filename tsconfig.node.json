{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./scripts/types"]
  },
  "include": ["scripts/**/*"]
}
